---
import { getCollection } from 'astro:content';
import PagesLayout from '../../layouts/PagesLayout.astro';
import Button from '../../components/ui/Button.astro';
import './_index.css';

export async function getStaticPaths() {
  const posts = await getCollection('open-source');
  return posts.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<PagesLayout title={project.data.title} description={project.data.description} currentPath={`/open-source/${project.slug}`}>
  <div class="open-source-page">
    <div class="project-header">
      <div class="project-header-top">
        {project.data.icon && (
          project.data.icon.includes('.') || project.data.icon.startsWith('/') ? (
            <img src={project.data.icon} alt={project.data.title} class="project-icon-img" />
          ) : (
            <span class="project-icon-emoji">{project.data.icon}</span>
          )
        )}
        <div class="project-title-wrapper">
          <h1 class="project-title">{project.data.title}</h1>
          <span class="project-year">{project.data.year}</span>
        </div>
      </div>
      
      <p class="project-description">{project.data.description}</p>
      
      <div class="project-actions">
        {project.data.demo && (
          <Button href={project.data.demo} target="_blank">View Site</Button>
        )}
        {project.data.source && (
          <Button href={project.data.source} target="_blank">View Source</Button>
        )}
      </div>
    </div>

    <div class="project-content markdown">
      <Content />
    </div>
  </div>
</PagesLayout>

<style>
  .project-header {
    margin-bottom: var(--space-8);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .project-header-top {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .project-icon-emoji {
    font-size: 48px;
    line-height: 1;
  }

  .project-icon-img {
    width: 48px;
    height: 48px;
    object-fit: contain;
  }

  .project-title-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .project-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-heading);
    margin: 0;
    line-height: 1.2;
  }

  .project-year {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
  }

  .project-description {
    font-size: var(--font-size-xl);
    color: var(--color-text);
    margin: 0;
    max-width: 800px;
    line-height: 1.6;
  }

  .project-actions {
    display: flex;
    gap: var(--space-3);
    margin-top: var(--space-2);
  }
  
  .project-content {
    font-size: var(--font-size-lg);
    line-height: 1.8;
  }
</style>
