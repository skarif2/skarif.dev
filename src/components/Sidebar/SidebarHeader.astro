---
/**
 * SidebarHeader - Shared header component with title and LinkedIn icon
 * Used by both Sidebar (desktop) and TopBar (mobile/tablet)
 */
---

<div class="sidebar-header-content">
  <a href="/" class="site-title">
    <span>Sk Arif</span>
  </a>
  <a 
    href="https://www.linkedin.com/in/skarif2/" 
    class="linkedin-icon" 
    target="_blank" 
    rel="noopener noreferrer" 
    aria-label="LinkedIn Profile"
  >
    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
      <rect x="2" y="9" width="4" height="12"></rect>
      <circle cx="4" cy="4" r="2"></circle>
    </svg>
  </a>
</div>

<style>
  .sidebar-header-content {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .site-title {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-heading);
    text-decoration: none;
    transition: color var(--transition-fast), opacity var(--transition-fast);
  }

  .site-title:hover {
    color: var(--color-primary);
    opacity: 1;
  }

  .linkedin-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    transition: color var(--transition-fast);
    align-self: flex-end;
    margin-bottom: calc(var(--space-1) + 3px);
  }

  .linkedin-icon:hover,
  .linkedin-icon:visited,
  .linkedin-icon:link {
    color: var(--color-primary);
  }
</style>
